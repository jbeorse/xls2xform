<?xml version="1.0" ?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>
      Demography Survey
    </h:title>
    <model>
      <instance>
        <Data xmlns="">
          <HouseholdMember>
            <Name/>
            <PersonID/>
            <Sex/>
            <DateOfBirth/>
            <Age/>
            <RelationToHouseholdHead/>
            <MaritalStatus/>
            <OrphanStatus/>
            <MonthsLivedInHouseOverPastTwelve/>
          </HouseholdMember>
        </Data>
      </instance>
      <bind nodeset="/Data/HouseholdMember/Name" type="string"/>
      <bind nodeset="/Data/HouseholdMember/PersonID" type="string"/>
      <bind nodeset="/Data/HouseholdMember/Sex" type="string"/>
      <bind constraint=". &lt;= today()" jr:constraintMsg="Date of birth must be in the past." nodeset="/Data/HouseholdMember/DateOfBirth" type="date"/>
      <bind jr:constraintMsg="Age inconsistent with date of birth." nodeset="/Data/HouseholdMember/Age" type="int"/>
      <bind nodeset="/Data/HouseholdMember/RelationToHouseholdHead" type="string"/>
      <bind nodeset="/Data/HouseholdMember/MaritalStatus" type="string"/>
      <bind nodeset="/Data/HouseholdMember/OrphanStatus" relevant="../Age &lt; 18" type="string"/>
      <bind constraint="0 &lt;= . and . &lt;= 12" jr:constraintMsg="Out of bounds: {0,1,...,12}" nodeset="/Data/HouseholdMember/MonthsLivedInHouseOverPastTwelve" type="int"/>
    </model>
  </h:head>
  <h:body>
    <group>
      <label>
        Household Member
      </label>
      <repeat nodeset="/Data/HouseholdMember">
        <input ref="/Data/HouseholdMember/Name">
          <label>
            Name of Household Member
          </label>
        </input>
        <input ref="/Data/HouseholdMember/PersonID">
          <label>
            Person ID
          </label>
        </input>
        <select1 ref="/Data/HouseholdMember/Sex">
          <label>
            Sex
          </label>
          <item>
            <label>
              Male
            </label>
            <value>
              Male
            </value>
          </item>
          <item>
            <label>
              Female
            </label>
            <value>
              Female
            </value>
          </item>
        </select1>
        <input ref="/Data/HouseholdMember/DateOfBirth">
          <label>
            Date of Birth
          </label>
        </input>
        <input ref="/Data/HouseholdMember/Age">
          <label>
            Age
          </label>
        </input>
        <select1 ref="/Data/HouseholdMember/RelationToHouseholdHead">
          <label>
            Relation to Household Head
          </label>
          <item>
            <label>
              Head
            </label>
            <value>
              Head
            </value>
          </item>
          <item>
            <label>
              Spouse
            </label>
            <value>
              Spouse
            </value>
          </item>
          <item>
            <label>
              Parent
            </label>
            <value>
              Parent
            </value>
          </item>
          <item>
            <label>
              Child (son/daughter)
            </label>
            <value>
              Child-(son/daughter)
            </value>
          </item>
          <item>
            <label>
              Grand child
            </label>
            <value>
              Grand-child
            </value>
          </item>
          <item>
            <label>
              Nephew/Niece
            </label>
            <value>
              Nephew/Niece
            </value>
          </item>
          <item>
            <label>
              Son/daughter-in-law
            </label>
            <value>
              Son/daughter-in-law
            </value>
          </item>
          <item>
            <label>
              Brother/Sister
            </label>
            <value>
              Brother/Sister
            </value>
          </item>
          <item>
            <label>
              Wife 2
            </label>
            <value>
              Wife-2
            </value>
          </item>
          <item>
            <label>
              Wife 3
            </label>
            <value>
              Wife-3
            </value>
          </item>
          <item>
            <label>
              Wife 4
            </label>
            <value>
              Wife-4
            </value>
          </item>
          <item>
            <label>
              Other relative
            </label>
            <value>
              Other-relative
            </value>
          </item>
          <item>
            <label>
              Other non-relative
            </label>
            <value>
              Other-non-relative
            </value>
          </item>
        </select1>
        <select1 ref="/Data/HouseholdMember/MaritalStatus">
          <label>
            Marital Status
          </label>
          <item>
            <label>
              Single
            </label>
            <value>
              Single
            </value>
          </item>
          <item>
            <label>
              Monogamously married
            </label>
            <value>
              Monogamously-married
            </value>
          </item>
          <item>
            <label>
              Polygamously married
            </label>
            <value>
              Polygamously-married
            </value>
          </item>
          <item>
            <label>
              Widowed/Widower
            </label>
            <value>
              Widowed/Widower
            </value>
          </item>
          <item>
            <label>
              Separated / Divorced
            </label>
            <value>
              Separated-/-Divorced
            </value>
          </item>
          <item>
            <label>
              Minor (Age 16 or under)
            </label>
            <value>
              Minor-(Age-16-or-under)
            </value>
          </item>
          <item>
            <label>
              Don't Know
            </label>
            <value>
              Don't-Know
            </value>
          </item>
        </select1>
        <select1 ref="/Data/HouseholdMember/OrphanStatus">
          <label>
            Orphan Status
          </label>
          <item>
            <label>
              Not an orphan
            </label>
            <value>
              Not-an-orphan
            </value>
          </item>
          <item>
            <label>
              Maternal orphan (only mother deceased)
            </label>
            <value>
              Maternal-orphan-(only-mother-deceased)
            </value>
          </item>
          <item>
            <label>
              Paternal orphan (only father deceased)
            </label>
            <value>
              Paternal-orphan-(only-father-deceased)
            </value>
          </item>
          <item>
            <label>
              Double orphan (both father and mother deceased)
            </label>
            <value>
              Double-orphan-(both-father-and-mother-deceased)
            </value>
          </item>
          <item>
            <label>
              Don't know
            </label>
            <value>
              Don't-know
            </value>
          </item>
        </select1>
        <input ref="/Data/HouseholdMember/MonthsLivedInHouseOverPastTwelve">
          <label>
            Number of months lived in the house over the past twelve months
          </label>
        </input>
      </repeat>
    </group>
  </h:body>
</h:html>

